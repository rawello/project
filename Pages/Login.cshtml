@page
@model project.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}
<style>
    form {
        margin-top: 100px;
    }

    .form-text{
        font-size: 15pt;
        display: block;
        text-align: center;
        position:center;
        margin-top: 300px;
        width: 140px;
        padding: 15px;
        margin: auto;
    }
    .text-form{
        margin-left: 30px;
    }
    .signup{
        text-align: center;
    }
    input{
        font-size: 15pt;
    }
    .submition{
        position: center;
        margin-top: 28px;
        font-size: 16pt;
        width: 270px;
        height: 35px;
    }
</style>
<form action="login" method="get">
    <div class="form-text">
        <label for="email" style="width: 200px" class="text-form">Введите логин</label>
        <input type="text" id="email" name="email" required minlength="5" size="24" class="text-input" />
    </div>
    <div class="form-text">
        <label for="password" style="width: 200px" class="text-form">Введите пароль</label>
        <input type="password" id="password" name="password" required minlength="5" size="24" class="text-input" />
    </div>
    <div class="form-text" style="position: center">
        <input type="submit" value="Войти" class="submition"/>
        <a class="signup" asp-area="" asp-page="/Signup" style="text-align: center; margin-left: 70px; padding: 10px; color: #808080">Регистрация</a>
    </div>
</form>
